{% extends 'base.html.twig' %}

{% block title %}Announces index{% endblock %}

{% block body %}

    <h1>Announces index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Prix journalier</th>
                <th>Propri√©taire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for announce in announces %}
            <tr>
                <td>{{ announce.id }}</td>
                <td>{{ announce.title }}</td>
                <td>{{ announce.Address }}</td>
                <td>{{ announce.City }}</td>
                <td>{{ announce.postcode }}</td>
                <td>{{ announce.dailyPrice }}</td>
                <td>{{ announce.userID.firstname }} {{ announce.userID.lastname }}</td>
                <td>
                    <a class="btn primary" href="{{ path('announces_show', {'id': announce.id}) }}">Consulter</a>
                    <a class="btn secondary" href="{{ path('announces_edit', {'id': announce.id}) }}">Modifier</a>
                    <a class="btn btn-danger" href="{{ path('announces_delete', {'id': announce.id}) }}" onclick="return confirm('Voullez-vous vraiment supprimer votre annonce?');">Supprimer</a>
                    <a class="btn btn-warning" href="{{ path('messages_send', {'id': announce.userID}) }}">Contacter</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
